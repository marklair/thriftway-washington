= form_for(@user) do |f|

  - if @user.errors.any?
    - @errors = @user.errors
    = render :partial => "layouts/full_error_messages"
    
  .field
    = f.label :username
    %br/
    = f.text_field :username
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :password
    %br/
    = f.password_field :password
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation
  .form-actions
    = f.submit :class => 'btn btn-primary'