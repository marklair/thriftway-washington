<!-- Masthead
================================================== -->
<header class="jumbotron subhead" id="overview">
  <div class="container">
    <h1>Base CSS</h1>
    <p class="lead">Fundamental HTML elements styled and enhanced with extensible classes.</p>
  </div>
</header>

<div class="container main-content">
  <div class="row">
    <div class="span3 bs-docs-sidebar">
      <ul class="nav nav-list bs-docs-sidenav">
        <li><a href="#typography"><i class="icon-chevron-right"></i> Typography</a></li>
        <li><a href="#tables"><i class="icon-chevron-right"></i> Tables</a></li>
        <li><a href="#forms"><i class="icon-chevron-right"></i> Forms</a></li>
        <li><a href="#buttons"><i class="icon-chevron-right"></i> Buttons</a></li>
        <li><a href="#images"><i class="icon-chevron-right"></i> Images</a></li>
        <li><a href="#code"><i class="icon-chevron-right"></i> Code</a></li>
        <li><a href="#icons"><i class="icon-chevron-right"></i> Icons</a></li>
      </ul>
    </div>
    <div class="span9">
      <!-- Page Settings
      ================================================== -->
      <% section_path = 'guides/bootstrap/base/' %>
      <!-- makes navbar section highlighted -->
      <script>$('#base-nav').addClass('active');</script>


      <!-- Typography
      ================================================== -->
      <%= render section_path + 'typography' %>

      <!-- Tables
      ================================================== -->
      <%= render section_path + 'tables' %>

      <!-- DataTables
      ================================================== -->
      <%= render 'guides/data_tables/datatables' %>

      <!-- Forms
      ================================================== -->
      <%= render section_path + 'forms' %>

      <!-- Datepicker
      ================================================== -->
      <%= render 'guides/datepicker/datepicker' %>

      <!-- Typeahead
      ================================================== -->
      <%= render 'guides/bootstrap/javascript/typeahead' %>

      <!-- Buttons
      ================================================== -->
      <%= render section_path + 'buttons' %>

      <!-- Images
      ================================================== -->
      <%= render section_path + 'images' %>

      <!-- Code
      ================================================== -->
      <%= render section_path + 'code' %>

      <!-- Icons
      ================================================== -->
      <%= render section_path + 'icons' %>
    </div><!-- .span9 -->
  </div><!-- .row -->
</div><!-- .container -->
