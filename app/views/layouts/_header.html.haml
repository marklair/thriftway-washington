.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{'data-toggle' => 'collapse', 'data-target' => '.nav-collapse'}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.brand{:href => "#"} Style Guide
      .nav-collapse
        %ul.nav
          %li#overview-nav
            %a{:href => '/guides/bootstrap/overview'} Overview
          %li#scaffolding-nav
            %a{:href => '/guides/bootstrap/scaffolding'} Scaffolding
          %li#base-nav
            %a{:href => '/guides/bootstrap/base'} Base
          %li#components-nav
            %a{:href => '/guides/bootstrap/components'} Components
          %li#javascript-nav
            %a{:href => '/guides/bootstrap/javascript'} Javascript plugins
          %li#less-nav
            %a{:href => '/guides/bootstrap/less'} Using LESS
        %ul.nav.pull-right
          %li.divider-vertical
          %li.dropdown
            %a.dropdown-toggle{ :href => "#", "data-toggle" => "dropdown"}
              %span.icon-user.icon-white.icon
              Account
              %span.caret
            %ul.dropdown-menu
              
              - if current_user
                %li= link_to "View Account", user_path(current_user.id)
                %li= link_to "Edit Account", edit_user_path(current_user.id)
                %li= link_to "Logout", :logout
              - else
                %li= link_to "Register", new_account_path
                %li= link_to "Login", :login
                %li.divider
                %li=link_to "Forgot password", new_password_reset_path
              -if can? :read, User
                %li.divider
                %li= link_to "Browse Accounts", users_path
                